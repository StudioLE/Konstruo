#!/bin/bash

UBUNTU_FONTS_ZIP="0cef8205-ubuntu-font-family-0.83.zip"
UBUNTU_FONTS_URL="https://assets.ubuntu.com/v1/${UBUNTU_FONTS_ZIP}"
UBUNTU_FONTS_TMP="/tmp/${UBUNTU_FONTS_ZIP}"

curl "${UBUNTU_FONTS_URL}" --location --output "${UBUNTU_FONTS_TMP}"
unzip -j "${UBUNTU_FONTS_TMP}" -x "__MACOSX/*" -d assets/ubuntu

MATERIAL_ICONS_TAR="4.0.0.tar.gz"
MATERIAL_ICONS_URL="https://github.com/google/material-design-icons/archive/refs/tags/${MATERIAL_ICONS_TAR}"
MATERIAL_ICONS_TMP="/tmp/${MATERIAL_ICONS_TAR}"

curl "${MATERIAL_ICONS_URL}" --location --output "${MATERIAL_ICONS_TMP}"
tar --extract --gzip --verbose \
--file="${MATERIAL_ICONS_TMP}" \
--strip-components=2 \
--wildcards \
--directory=assets/icons \
"material-design-icons-4.0.0/png/*"
